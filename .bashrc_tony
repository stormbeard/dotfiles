## Colors?  Used for the prompt.
WHITE='\[\033[1;37m\]'
LIGHTGRAY='\[\033[0;37m\]'
GRAY='\[\033[1;30m\]'
BLACK='\[\033[0;30m\]'
RED='\[\033[0;31m\]'
LIGHTRED='\[\033[1;31m\]'
GREEN='\[\033[0;32m\]'
LIGHTGREEN='\[\033[1;32m\]'
BROWN='\[\033[0;33m\]' #Orange
YELLOW='\[\033[1;33m\]'
BLUE='\[\033[0;34m\]'
LIGHTBLUE='\[\033[1;34m\]'
PURPLE='\[\033[0;35m\]'
PINK='\[\033[1;35m\]' #Light Purple
CYAN='\[\033[0;36m\]'
LIGHTCYAN='\[\033[1;36m\]'
DEFAULT='\[\033[0m\]'

ORANGE255="\e[38;5;130m"
GREEN255="\e[38;5;107m"
RED255="\e[38;5;124m"

function smile_prompt
{
  if [ "$?" -eq "0" ]
  then
    #smiley
    SC="${GREEN255}"
    SM=":)"
  else
    #frowney
    SC="${RED255}"
    SM=":("
  fi
  if [ $UID -eq 0 ]
  then
    #root user color
    UC="${RED}"
  else
    #normal user color
    UC="${ORANGE255}"
  fi
  #hostname color
  HC="${GREEN255}"
  #regular color
  RC="${GRAY}"
  #default color
  DF='\[\e[0m\]'
#  PS1="[${UC}\u${RC}@${HC}\h ${RC}\W${DF}] ${SC}${DF} "
  PS1="${SC}┌─[${UC}\u${RC}@${HC}\h: ${RC}\w${SC}] ${SM}\n└─★ ${DF}"
}

PROMPT_COMMAND=smile_prompt

# 256 colors in terminal because we live in the future
if [ -e /usr/share/terminfo/x/xterm-256color ]; then
  export TERM='xterm-256color'
else
  export TERM='xterm-color'
fi

# Shortcuts
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias ltr='ls -ltr'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias vi='vim'

