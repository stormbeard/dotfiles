[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[color "grep"]
  linenumber = yellow bold
  match = red
  filename = magenta
[push]
	default = tracking
[user]
	name = Tony Allen
	email = tony@upbound.io
[diff]
	renamelimit = 0
[core]
	editor = vim
	excludesfile = ~/.global_gitignore
[alias]
  l = log --graph --oneline --decorate
  ll = log --graph --oneline --decorate --branches --tags
  lll = log --graph --oneline --decorate --all
  dh = diff HEAD
  sr = stash --keep-index
  amend = commit -S --amend
  cm = commit -S -m
  commit = commit -S
  branch = branch -vv
[log]
	format = fuller
	decorate = true
[format]
	pretty = fuller
	signoff = true
